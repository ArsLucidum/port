<svg width="1200" height="600" viewBox="0 0 1200 600" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f8fafc;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e2e8f0;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="1200" height="600" fill="url(#heroGradient)"/>
  
  <!-- Before/After mockup -->
  <text x="300" y="80" text-anchor="middle" fill="#ef4444" font-family="Arial, sans-serif" font-size="20" font-weight="bold">BEFORE</text>
  <text x="900" y="80" text-anchor="middle" fill="#10b981" font-family="Arial, sans-serif" font-size="20" font-weight="bold">AFTER</text>
  
  <!-- Before design (cluttered) -->
  <rect x="150" y="100" width="300" height="400" fill="white" stroke="#e5e7eb" stroke-width="2" rx="8"/>
  <rect x="160" y="110" width="280" height="30" fill="#dc2626" rx="4"/>
  <rect x="170" y="155" width="60" height="40" fill="#fca5a5" rx="4"/>
  <rect x="240" y="155" width="60" height="40" fill="#fca5a5" rx="4"/>
  <rect x="310" y="155" width="60" height="40" fill="#fca5a5" rx="4"/>
  <rect x="380" y="155" width="50" height="40" fill="#fca5a5" rx="4"/>
  <!-- Messy content blocks -->
  <rect x="170" y="210" width="80" height="60" fill="#fecaca" rx="4"/>
  <rect x="260" y="210" width="80" height="60" fill="#fecaca" rx="4"/>
  <rect x="350" y="210" width="70" height="60" fill="#fecaca" rx="4"/>
  <rect x="170" y="280" width="120" height="40" fill="#fed7d7" rx="4"/>
  <rect x="300" y="280" width="120" height="40" fill="#fed7d7" rx="4"/>
  
  <!-- After design (clean) -->
  <rect x="750" y="100" width="300" height="400" fill="white" stroke="#e5e7eb" stroke-width="2" rx="8"/>
  <rect x="760" y="110" width="280" height="30" fill="#2563eb" rx="4"/>
  <rect x="770" y="155" width="80" height="40" fill="#dbeafe" rx="4"/>
  <rect x="860" y="155" width="80" height="40" fill="#dbeafe" rx="4"/>
  <rect x="950" y="155" width="80" height="40" fill="#dbeafe" rx="4"/>
  <!-- Clean organized content -->
  <rect x="770" y="210" width="260" height="80" fill="#f0f9ff" rx="8"/>
  <rect x="780" y="220" width="60" height="60" fill="#bfdbfe" rx="4"/>
  <rect x="850" y="225" width="120" height="8" fill="#93c5fd" rx="2"/>
  <rect x="850" y="240" width="100" height="6" fill="#93c5fd" rx="2"/>
  <rect x="850" y="255" width="80" height="6" fill="#93c5fd" rx="2"/>
  
  <rect x="770" y="300" width="260" height="80" fill="#f0f9ff" rx="8"/>
  <rect x="780" y="310" width="60" height="60" fill="#bfdbfe" rx="4"/>
  <rect x="850" y="315" width="120" height="8" fill="#93c5fd" rx="2"/>
  <rect x="850" y="330" width="100" height="6" fill="#93c5fd" rx="2"/>
  <rect x="850" y="345" width="80" height="6" fill="#93c5fd" rx="2"/>
  
  <!-- Arrow showing improvement -->
  <path d="M500 300L650 300" stroke="#64748b" stroke-width="3" marker-end="url(#arrowhead)"/>
  <defs>
    <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="0" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#64748b"/>
    </marker>
  </defs>
  
  <text x="600" y="550" text-anchor="middle" fill="#64748b" font-family="Arial, sans-serif" font-size="18">E-commerce Platform Transformation</text>
</svg>